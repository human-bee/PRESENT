{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/lib/agents/**/*.ts",
    "src/lib/agents/**/*.tsx",
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components",
    "src/lib/tools",
    "src/lib/livekit",
    "src/lib/mcp-*",
    "src/lib/system-registry.ts",
    "src/lib/test-*.ts",
    "src/lib/thread-hooks.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}


