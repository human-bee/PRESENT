{
  "compilerOptions": {
    // Aligning with agent config where appropriate, but keeping app-specific settings
    "target": "ES2020", // match agent for modern JS features
    "module": "esnext", // keep for Next.js, agent uses ES2020 but esnext is fine for app
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // app needs DOM, agent does not
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler", // Next.js default, agent uses "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true, // from agent config, good for all
    "allowSyntheticDefaultImports": true, // from agent config, good for all
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@custom-ai/react": [
        "./src/lib/shims/custom-react.ts"
      ],
      "@custom-ai/react/mcp": [
        "./src/lib/shims/custom-react-mcp.tsx"
      ],
      "@tldraw/tldraw": [
        "./src/lib/tldraw-shim"
      ],
      "@tldraw/fairy-shared": [
        "./src/vendor/tldraw-fairy/fairy-shared"
      ],
      "@tldraw/fairy-shared/*": [
        "./src/vendor/tldraw-fairy/fairy-shared/*"
      ],
      "@tldraw/dotcom-shared": [
        "./src/vendor/tldraw-fairy/dotcom-shared"
      ],
      "@tldraw/dotcom-shared/*": [
        "./src/vendor/tldraw-fairy/dotcom-shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cloudflare",
    "generated",
    "remotion",
    "scripts",
    "showcase",
    "src/lib/tldraw-agent",
    "tests",
    "src/lib/test-*.ts",
    "tmp-*",
    "vendor"
  ]
}
